<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@color/white"
    android:layoutAnimation="@anim/layout_animation"
    tools:context=".ui.AdminDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="#b392c7"
        android:layoutAnimation="@anim/layout_animation"
        android:padding="15dp"
        app:cardCornerRadius="15dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layoutAnimation="@anim/layout_animation"
            android:orientation="vertical"
            android:padding="10dp"

            >

            <TextView
                android:id="@+id/admin_detail_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layoutAnimation="@anim/layout_animation"
                android:text="GroupName"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/admin_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layoutAnimation="@anim/layout_animation"
                android:text="rajat"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/admin_detail_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layoutAnimation="@anim/layout_animation"
                android:text="rajat@gmail.com"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/admin_detail_moblie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layoutAnimation="@anim/layout_animation"
                android:text="rajat"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>