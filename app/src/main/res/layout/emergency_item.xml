<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/emergencyImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_android"
            android:padding="2dp" />

        <TextView
            android:id="@+id/emergencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/emergencyImageView"
            android:text="Emergency Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/emergencyImageView"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/emergencyNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emergencyName"
            android:layout_toEndOf="@id/emergencyImageView"
            android:textColor="@android:color/darker_gray"

            android:text="Emergency Number"
            android:textSize="15sp"
            android:layout_marginStart="8dp"

            android:layout_toRightOf="@id/emergencyImageView"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="call"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>