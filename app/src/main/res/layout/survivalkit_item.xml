<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/survivalkit_item_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:gravity="center_horizontal"
            android:text="1.Master Your Attitude"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/survivalkit_item_imageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/survivalkit_item_title_text"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/survivalkit_item_body_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/survivalkit_item_imageview"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="A survival situation is not the time to panic. You are more likely to survive a difficult situation if you focus on maintaining a positive, proactive attitude.\n ● Develop a plan.\n ● Inventory the resources you have.\n ● Identify the critical tasks required for survival(Water, shelter,warmth)."
            android:textColor="@android:color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>